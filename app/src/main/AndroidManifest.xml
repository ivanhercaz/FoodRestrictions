<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mochiladepano.foodrestrictions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="br.com.mochiladepano.foodrestrictions.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.com.mochiladepano.foodrestrictions.MessagesTab"
            android:label="@string/app_name"
            android:parentActivityName="br.com.mochiladepano.foodrestrictions.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.mochiladepano.foodrestrictions.MainActivity" />
        </activity>

    </application>

</manifest>
